{
  "name": "python-3rd-edition-buddy",
  "displayName": "Python Crash Course 3rd Edition Buddy",
  "description": "A VS Code extension that helps navigate Python Crash Course 3rd Edition course files with a directory tree view",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Education"
  ],
  "publisher": "learning-buddy",
  "icon": "media/icon-512.png",
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Python Crash Course 3rd Edition Buddy",
      "properties": {
        "python3rdEditionBuddy.downloadPath": {
          "type": "string",
          "default": "~/python-crash-course-3rd-edition-buddy",
          "description": "Default download path for Python Crash Course chapters. If empty, you'll be prompted to select a folder when downloading."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "python3rdEditionBuddy",
          "title": "Python Crash Course 3rd Edition Buddy",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "python3rdEditionBuddy": [
        {
          "id": "python3rdEditionBuddyView",
          "name": ""
        }
      ]
    },
    "commands": [
      {
        "command": "python3rdEditionBuddy.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "python3rdEditionBuddy.downloadChapter",
        "title": "Download Chapter",
        "icon": "$(cloud-download)"
      },
      {
        "command": "python3rdEditionBuddy.selectDownloadWorkspace",
        "title": "Select Download Workspace"
      },
      {
        "command": "python3rdEditionBuddy.openReadOnlyFile",
        "title": "Open File"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "python3rdEditionBuddy.refresh",
          "when": "view == python3rdEditionBuddyView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "python3rdEditionBuddy.downloadChapter",
          "when": "view == python3rdEditionBuddyView && viewItem == chapter",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/terminail/learning-buddy.git"
  },
  "bugs": {
    "url": "https://github.com/terminail/learning-buddy/issues"
  },
  "homepage": "https://github.com/terminail/learning-buddy/blob/main/python-3rd-edition/README.md",
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}
